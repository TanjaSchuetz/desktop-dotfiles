#!/usr/bin/env bash

export WORK_ONEMOBILE=$WORKSPACE/Node/OneMobile
export WORK_ONETIMECLIENT=$WORKSPACE/Node/OneTimeClient
export WORK_ONETIMESERVER=$WORKSPACE/Node/OneTimeServer
export WORK_OTW_CORE=$WORKSPACE/Node/OtwCore
export WORK_OTW_BLL=$WORKSPACE/Node/OtwBll
export WORK_OTW_REST=$WORKSPACE/Node/OtwRestClient
export WORK_OTW_ATOMIC=$WORKSPACE/Node/OtwAtomic
export WORK_OTW_WIDGETS=$WORKSPACE/Node/OtwWidget

ONEMOBILE_SHELL="$TERMINAL --directory $WORK_ONEMOBILE"
ONETIMECLIENT_SHELL="$TERMINAL --directory $WORK_ONETIMECLIENT"
ONETIMESERVER_SHELL="$TERMINAL --directory $WORK_ONETIMESERVER"
OTW_CORE_SHELL="$TERMINAL --directory $WORK_OTW_CORE"
OTW_BLL_SHELL="$TERMINAL --directory $WORK_OTW_BLL"
OTW_REST_SHELL="$TERMINAL --directory $WORK_OTW_REST"
OTW_ATOMIC_SHELL="$TERMINAL --directory $WORK_OTW_ATOMIC"
OTW_WIDGETS_SHELL="$TERMINAL --directory $WORK_OTW_WIDGETS"

export CUSTOM_TOP_ACTIONS=(
    "🏄 OTS: Start Server" "$ONETIMESERVER_SHELL --hold --title OTC:StartServer yarn start"
    "🛫 OTC: Start Compiler OneTimeClient" "$ONETIMECLIENT_SHELL --hold --title OTC:StartClient yarn start"
    "🛫 OTC: Start Compiler OtwWidgets" "$OTW_WIDGETS_SHELL --hold --title OTC:StartOtwWidgets yarn start"
    "🛫 OTW: Start Compiler OtwCore" "$OTW_CORE_SHELL --hold --title OTW:StartOtwCore yarn watch"
    "🛫 OTW: Start Compiler OtwBll" "$OTW_BLL_SHELL --hold --title OTW:StartOtwBll yarn watch"
    "🛫 OTW: Start Compiler OtwRestClient" "$OTW_REST_SHELL --hold --title OTW:StartOtwRestClient yarn watch"
    "🛫 OTW: Start Compiler OtwAtomic" "$OTW_ATOMIC_SHELL --hold --title OTW:StartOtwAtomic yarn watch"
    "💻 OTS: Shell Server" "$ONETIMESERVER_SHELL --hold --title OTS:Shell"
    "💻 OTC: Shell OneTimeClient" "$ONETIMECLIENT_SHELL --hold --title OTC:Shell"
    "💻 OTW: Shell OtwWidgets" "$OTW_WIDGETS_SHELL --hold --title OTW:ShellOtwWidgets"
    "💻 OTW: Shell OtwCore" "$OTW_CORE_SHELL --hold --title OTW:ShellOtwCore"
    "💻 OTW: Shell OtwBll" "$OTW_BLL_SHELL --hold --title OTW:ShellOtwBll"
    "💻 OTW: Shell OtwRestClient" "$OTW_REST_SHELL --hold --title OTW:ShellOtwRestClient"
    "💻 OTW: Shell OtwAtomic" "$OTW_ATOMIC_SHELL --hold --title OTW:ShellOtwAtomic"
)

export CUSTOM_BOTTOM_ACTIONS=(
    "🗂 OTC: Dateien" "$FILEMANAGER $WORK_ONETIMECLIENT"
    "🇬 OTC: Git" "code $WORK_ONETIMECLIENT"
    "🗂 OTS: Dateien" "$FILEMANAGER $WORK_ONETIMESERVER"
    "🇬 OTS: Git" "code $ONETIMESERVER_SHELL"
    "🛫 OM: Start Compiler" "$ONEMOBILE_SHELL --hold --title OMC:StartDefault yarn start"
    "🗂 OM: Dateien" "$FILEMANAGER $WORK_ONEMOBILE"
    "💻 OM: Shell" "$ONEMOBILE_SHELL --hold --title OTC:Shell"
    "🇬 OM: Git" "code $ONEMOBILE_SHELL"
    "🛫 OM: Build Android" "$ONEMOBILE_SHELL --hold --title OMC:BuildAndroid $TIME yarn android:build"
    "🇺 OM: Check Updates" "$ONEMOBILE_SHELL --hold --title OMC:CheckUpdates $TIME yarn outdated"
)
