# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# set default desktop layout (default is tiling)
# workspace_layout tabbed <stacking|tabbed>

# intern actions
set $notify exec notify-send --no-startup-id --expire-time=1500

# extern apps definition
set $terminal alacritty
set $editor kate
set $browser firefox
set $mail thunderbird
set $filemanager krusader

set $font_text xft:Clear Sans Medium 11
