# floating_maximum_size <width> x <height>

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font $font_text
# font xft:Source Code Pro 10


######################
# Set Monitor layout #
######################
exec_always $notify "Monitor 1: $monitor1"
exec_always $notify "Monitor 2: $monitor2"

set_from_resource $monitor1 monitor1 DP-1
set_from_resource $monitor2 monitor2 DP-2

exec --no-startup-id /opt/screenlayout.sh

bindsym $mod+Ctrl+m exec $terminal -e 'alsamixer'

