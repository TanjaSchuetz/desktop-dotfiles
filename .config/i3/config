#######################
# Theme Switcher Mode #
#######################

set $mode_theme Theme wählen: (D)ark, (L)ight [ Achtung: Automatische Abmeldung und nur mit aktiven GIT-Repository möglich !! ]
bindsym $mod+Shift+t mode "$mode_theme"

mode "$mode_theme" {
        bindsym d   exec --no-startup-id git checkout dark-theme -f; exec $notify -u critical "Auf Dark-Theme gewechselt..."; exec --no-startup-id i3exit logout; mode "default"
        bindsym l   exec --no-startup-id git checkout light-theme -f; exec $notify -u critical "Auf Light-Theme gewechselt..."; exec --no-startup-id i3exit logout; mode "default"
        
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
