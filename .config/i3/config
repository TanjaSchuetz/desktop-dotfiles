############################
# status bar configuration 
############################

bar {
    id main-top-bar
    
    position top
    output $monitor1
    
    status_command bumblebee-status --markup pango \
    -m title git progress pomodoro \
    -t iceberg-rainbow 
    
    tray_output primary
    workspace_buttons no
}

bar {
    id main-bar

    position bottom
    output $monitor1
    
    status_command bumblebee-status --markup pango \
    -m hostname kernel git cpu2 sensors memory pasource pasink dunst layout-xkbswitch indicator datetime system \
    -t iceberg-rainbow 
    
    tray_output none
    
    colors {
        # background $term_color3
    }
}

bar {
    id second-top-bar
    
    position top
    output $monitor2
    
    status_command bumblebee-status --markup pango \
    -m disk \
    -a disk \
    -t gruvbox-powerline-light 
    
    tray_output none
    workspace_buttons no
}

bar {
    id second-bar
    position bottom
    output $monitor2

    status_command bumblebee-status --markup pango \
    -m network_traffic sensors2 weather \
    -t gruvbox-powerline-light
    
    tray_output none    
}


####################
# Key Combinations #
####################

# hide/unhide i3status bar
bindsym $mod+m bar mode toggle

# change borders
bindsym $mod+u border none
bindsym $mod+y border pixel 10
bindsym $mod+n border normal

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font xft:URWGothic-Book 11

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $terminal

# kill focused window
bindsym $mod+Shift+q kill

# start program launcher
# bindsym $mod+d exec --no-startup-id dmenu_recency
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# launch categorized menu
bindsym $mod+z exec --no-startup-id morc_menu

# terminal applications
bindsym $mod+Ctrl+b exec $terminal -e 'bmenu'

bindsym $mod+F2 exec firefox 

# file manager
bindsym $mod+F3 exec krusader
# bindsym $mod+F3 exec ranger
bindsym $mod+Shift+F3 exec gksu krusader

# compton grafic effects
bindsym $mod+t exec --no-startup-id pkill compton
bindsym $mod+Ctrl+t exec --no-startup-id "pkill compton; sleep 1;compton -b; $notify 'restart compton'"
bindsym $mod+Ctrl+d --release exec "killall dunst; sleep 1; dunst -startup_notification; $notify 'restart dunst'"
bindsym $mod+Shift+d --release $notify ' <b>Dunst Test Message</b>:\nLabber... '

# screenshots
bindsym Print exec --no-startup-id spectacle 
bindsym $mod+Print --release exec --no-startup-id spectacle -a
bindsym $mod+Shift+Print --release exec --no-startup-id spectacle -r

# bindsym $mod+Shift+h exec xdg-open /usr/share/doc/manjaro/i3_help.pdf

bindsym $mod+Ctrl+x --release exec --no-startup-id xkill

# focus_follows_mouse no

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# workspace back and forth (with/without active container)
workspace_auto_back_and_forth yes
bindsym $mod+b workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth

# split orientation
bindsym $mod+h split h;$notify 'tile horizontal'
bindsym $mod+v split v;$notify 'tile vertikal'
bindsym $mod+q split toggle;$notify 'tile toggle'

# toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking;$notify 'Layout Geschachtelt'
bindsym $mod+w layout tabbed;$notify 'Layout Tabs'
bindsym $mod+e layout toggle split;$notify 'Layout Split'

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle;$notify 'Floating Toggle'

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# toggle sticky
bindsym $mod+Shift+s sticky toggle;$notify 'Sticky Toggle'

# focus the parent container
bindsym $mod+a focus parent

# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

# reload the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Ctrl+c exec "kate ~/.gitignore  ~/.config/i3/config ~/.config/dunst/dunstrc ~/i3install.sh;$notify 'Konfiguration geöffnet'"

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Du hast den Shortcut zum beenden gedrückt. Willst du wirklich raus hier? Das wird die Session beenden.' -b 'Ja, exit i3' 'i3-msg exit'"

# Lock screen
bindsym $mod+Ctrl+l exec --no-startup-id blurlock


