#########################################
# Bumblee Bar (replaces default i3-bar) #
#########################################

bar {
    id main-top-bar
    font $font_symbol
    
    position top
    output $monitor1
    
    status_command bumblebee-status --markup=pango \
    -m title progress spotify pomodoro:timer5 pomodoro:timer10 pomodoro:timer20  pasource pasink \
    -t $bumble_theme
    
    tray_output $monitor1
    workspace_buttons no

    colors {
        background $background
        statusline $foreground
        separator $foreground
    }
}

bar {
    id main-bar
    font $font_symbol

    position bottom
    output $monitor1
    
    status_command bumblebee-status --markup=pango \
    -m hostname kernel git memory layout-xkbswitch indicator dunst datetime \
    -t $bumble_theme
    
    tray_output none

    colors {
        background $background
        statusline $foreground
        separator $foreground
    }
}

bar {
    id second-top-bar
    font $font_symbol
    
    position top
    output $monitor2
    
    status_command bumblebee-status --markup=pango \
    -m network_traffic disk:disk_root disk:disk_bigdata disk:disk_vm disk:disk_workspace weather:br weather:hx cpu2 \
    -p weather.right-click="notify-send {instance}" \
    -a disk_root disk_bigdata disk_vm disk_workspace \
    -t $bumble_theme
    
    tray_output none
    workspace_buttons no

    colors {
        background $background
        statusline $foreground
        separator $foreground
    }
}

bar {
    id second-bar
    font $font_symbol

    position bottom
    output $monitor2

    status_command bumblebee-status --markup=pango \
    -m sensors2 \
    -t $bumble_theme
    
    tray_output none    

    colors {
        background $background
        statusline $foreground
        separator $foreground
    }
}

####################
# Key Combinations #
####################

# hide/unhide i3status bar
bindsym $mod+m bar mode toggle

# change borders
bindsym $mod+u border none
bindsym $mod+y border $border
bindsym $mod+n border normal

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

################
# main actions #
################

# start a terminal
bindsym $mod+Return exec $terminal
# kill focused window
bindsym $mod+Shift+q kill
# Set shut down, restart and locking features
bindsym $mod+Shift+e mode "$mode_system"

# split orientation
bindsym $mod+q split toggle;exec $notify 'tile toggle'
bindsym $mod+v split v;exec $notify 'tile vertikal'
bindsym $mod+h split h;exec $notify 'tile horizontal'

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking;exec $notify 'Layout Geschachtelt'
bindsym $mod+w layout tabbed;exec $notify 'Layout Tabs'
bindsym $mod+e layout toggle split;exec $notify 'Layout Split'

# start applications
bindsym $mod+Ctrl+b exec --no-startup-id $terminal -e 'bmenu'
bindsym $mod+F6 exec --no-startup-id $browser 
bindsym $mod+F2 exec --no-startup-id $filemanager
bindsym $mod+F3 exec --no-startup-id $filemanager_root
bindsym Ctrl+Escape exec $guard

# launch categorized menus
bindsym $mod+d exec --no-startup-id "rofi -show drun -location 2"
bindsym $mod+z exec --no-startup-id "rofi -show combi"
bindsym $mod+Ctrl+F2 exec --no-startup-id "rofi -combi-modi window,drun,keys,ssh,run -show combi -location 2"

# compton grafic effects
bindsym $mod+t exec --no-startup-id pkill $composite
bindsym $mod+Ctrl+t exec --no-startup-id "pkill $composite; sleep 1;$composite --config ~/.config/compton.conf -b;"; exec $notify 'restart $composite'
bindsym $mod+Ctrl+d --release exec "killall dunst; sleep 1; dunst;exec $notify 'restart dunst'"
bindsym $mod+Shift+d exec $notify ' Normal Dunst Test Message...';exec $notify -u low 'Low  Dunst Test Message... ';exec $notify -u critical ' Critical Dunst Test Message... '

# screenshots
bindsym Print exec --no-startup-id spectacle 
bindsym $mod+Print --release exec --no-startup-id spectacle -m
bindsym $mod+Shift+Print --release exec --no-startup-id spectacle -a -g
bindsym $mod+Ctrl+Print --release exec --no-startup-id spectacle -r

# bindsym $mod+Shift+h exec xdg-open /usr/share/doc/manjaro/i3_help.pdf

bindsym $mod+Ctrl+x --release exec --no-startup-id xkill

focus_follows_mouse no

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# workspace back and forth (with/without active container)
workspace_auto_back_and_forth yes
bindsym $mod+b workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth

# toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle;exec $notify 'Floating Toggle'

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
# focus the parent container
bindsym $mod+a focus parent

# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

# Lock screen
bindsym $mod+Ctrl+l exec --no-startup-id blurlock

#
# helper actions
#

# reload the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Ctrl+c exec --no-startup-id "$editor ~/.config/i3/*"; exec $notify 'Konfiguration geöffnet'

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

