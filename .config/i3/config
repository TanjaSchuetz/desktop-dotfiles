##########
# Basics #
##########
# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# set default desktop layout (default is tiling)
# workspace_layout tabbed <stacking|tabbed>

# intern actions
set $notify --no-startup-id notify-send --expire-time=2500

# extern apps definition
set $terminal alacritty
set $editor kate
set $composite picom
set $browser firefox
set $mail thunderbird
set $filemanager krusader
set $filemanager_root kdesu krusader
set $guard ksysguard

set $font_text xft:Clear Sans Medium 11
set $font_symbol pango:Hack 10

set $border pixel 5

#set $bumble_theme  default
