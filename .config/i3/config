#########################################
# Bumblee Bar (replaces default i3-bar) #
#########################################

bar {
    id main-top-bar
    font $font_symbol
    
    position top
    output $monitor1
    
    status_command bumblebee-status --markup=pango \
    -m title progress spotify pomodoro pasource pasink system  \
    -t $bumble_theme
    
    tray_output $monitor1
    workspace_buttons no
}

bar {
    id main-bar
    font $font_symbol

    position bottom
    output $monitor1
    
    status_command bumblebee-status --markup=pango \
    -m hostname kernel git memory dunst layout-xkbswitch indicator datetime \
    -t $bumble_theme
    
    tray_output none
}

bar {
    id second-top-bar
    font $font_symbol
    
    position top
    output $monitor2
    
    status_command bumblebee-status --markup=pango \
    -m network_traffic disk:disk_root disk:disk_bigdata disk:disk_vm disk:disk_workspace weather:brakel weather:höxter  \
    -a .disk_root .disk_bigdata .disk_vm .disk_workspace \
    -t $bumble_theme
    
    tray_output none
    workspace_buttons no
}

bar {
    id second-bar
    font $font_symbol

    position bottom
    output $monitor2

    status_command bumblebee-status --markup=pango \
    -m sensors2 cpu2 \
    -t $bumble_theme
    
    tray_output none    
}

####################
# Key Combinations #
####################

# hide/unhide i3status bar
bindsym $mod+m bar mode toggle

# change borders
bindsym $mod+u border none
bindsym $mod+y border pixel 10
bindsym $mod+n border normal

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $terminal

# kill focused window
bindsym $mod+Shift+q kill

# start program launcher
bindsym $mod+d exec --no-startup-id "rofi -show drun -location 2"

# launch categorized menu
bindsym $mod+z exec --no-startup-id "rofi -show combi"
bindsym $mod+Shift+z exec --no-startup-id "rofi -combi-modi windowcd,keys,ssh,run -show combi"
bindsym $mod+Ctrl+F2 exec --no-startup-id "rofi -combi-modi window,drun,keys,ssh,run -show combi -location 2"

# terminal applications
bindsym $mod+Ctrl+b exec --no-startup-id $terminal -e 'bmenu'

bindsym $mod+F2 exec --no-startup-id $browser 

# file manager
bindsym $mod+F3 exec --no-startup-id $filemanager
# bindsym $mod+F3 exec ranger
bindsym $mod+Shift+F3 exec --no-startup-id gksu $filemanager

# compton grafic effects
bindsym $mod+t exec --no-startup-id pkill compton
bindsym $mod+Ctrl+t exec --no-startup-id "pkill compton; sleep 1;compton --config ~/.config/compton.conf -b; $notify 'restart compton'"
bindsym $mod+Ctrl+d --release exec "killall dunst; sleep 1; dunst; $notify 'restart dunst'"
bindsym $mod+Shift+d --release $notify ' Dunst Test Message... '

# screenshots
bindsym Print exec --no-startup-id spectacle 
bindsym $mod+Print --release exec --no-startup-id spectacle -a
bindsym $mod+Shift+Print --release exec --no-startup-id spectacle -r

# bindsym $mod+Shift+h exec xdg-open /usr/share/doc/manjaro/i3_help.pdf

bindsym $mod+Ctrl+x --release exec --no-startup-id xkill

focus_follows_mouse no

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# workspace back and forth (with/without active container)
workspace_auto_back_and_forth yes
bindsym $mod+b workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth

# split orientation
bindsym $mod+h split h;$notify 'tile horizontal'
bindsym $mod+v split v;$notify 'tile vertikal'
bindsym $mod+q split toggle;$notify 'tile toggle'

# toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking;$notify 'Layout Geschachtelt'
bindsym $mod+w layout tabbed;$notify 'Layout Tabs'
bindsym $mod+e layout toggle split;$notify 'Layout Split'

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle;$notify 'Floating Toggle'

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# toggle sticky
bindsym $mod+Shift+s sticky toggle;$notify 'Sticky Toggle'

# focus the parent container
bindsym $mod+a focus parent

# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

# reload the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Ctrl+c exec --no-startup-id "$editor ~/.config/i3/config ~/.Xresources ~/.config/compton.conf ~/.config/bumblebee-status/bumblebee-status.conf ~/.config/rofi/config.rasi ~/.config/dunst/dunstrc ~/i3install.sh ~/.gitignore;$notify 'Konfiguration geöffnet'"

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Lock screen
bindsym $mod+Ctrl+l exec --no-startup-id blurlock

