# You can change this values according to your preference
gaps inner 5
gaps outer 5

##########
# Basics #
##########
# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

set $terminal i3-sensible-terminal
set $notify exec notify-send --expire-time=1500

# I use Firefox as default browser
set $browser firefox
# Your default mail client
set $mail thunderbird
font pango:envypn 11

# set default desktop layout (default is tiling)
# workspace_layout tabbed <stacking|tabbed>

floating_minimum_size 400 x 200
# floating_maximum_size <width> x <height>

######################
# Set Monitor layout #
######################
set $monitor1 DP2
set $monitor2 DP3

exec --no-startup-id xrandr --output $monitor1 --primary
exec --no-startup-id xrandr --output $monitor2 --right-of $monitor1

