#!/usr/bin/env bash
. $SCRIPTS/defs

$SCRIPTS/set-wallpaper.sh

#==============
# System tools
#==============
run /usr/lib/xfce-polkit/xfce-polkit
# run lxqt-policykit-agent

run ibus-daemon -d -x
run unclutter --root --timeout 3
run xscreensaver

#---------------
# Desktop Tools
#---------------
$HOME/.bin/volume-osd &

run alttab -n 1
run pamac-tray

run blueman-tray
run blueman-applet
run nm-applet

run teams
run jetbrains-toolbox

# Sound Tray Icons
# restart start-pulseaudio-x11
run pasystray
run copyq

sh $SCRIPTS/picom-toggle-awesome.sh &

file=$HOME/.custom/autostart
if [ -f "$file" ]; then
    . "$file"
fi

#cursor active at boot
run xsetroot -cursor_name left_ptr -bg "#2a2a2a" -fg "#d6d6d6"
